<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.bookstore.servlet.loginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/servlet/loginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>regServlet</servlet-name>
        <servlet-class>com.bookstore.servlet.regServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>regServlet</servlet-name>
        <url-pattern>/servlet/regServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addBookServlet</servlet-name>
        <servlet-class>com.bookstore.servlet.addBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addBookServlet</servlet-name>
        <url-pattern>/servlet/addBookServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>editBookInfoServlet</servlet-name>
        <servlet-class>com.bookstore.servlet.editBookInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>editBookInfoServlet</servlet-name>
        <url-pattern>/servlet/editBookInfoServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deteleBookServlet</servlet-name>
        <servlet-class>com.bookstore.servlet.deleteBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deteleBookServlet</servlet-name>
        <url-pattern>/servlet/deteleBookServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteOrderServlet</servlet-name>
        <servlet-class>com.bookstore.servlet.deleteOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteOrderServlet</servlet-name>
        <url-pattern>/servlet/deleteOrderServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>editOrderServlet</servlet-name>
        <servlet-class>com.bookstore.servlet.editOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>editOrderServlet</servlet-name>
        <url-pattern>/servlet/editOrderServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addSCServlet</servlet-name>
        <servlet-class>com.bookstore.servlet.addSCServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addSCServlet</servlet-name>
        <url-pattern>/servlet/addSCServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>editCountServlet</servlet-name>
        <servlet-class>com.bookstore.servlet.editCountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>editCountServlet</servlet-name>
        <url-pattern>/servlet/editCountServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>deleteSCServlet</servlet-name>
        <servlet-class>com.bookstore.servlet.deleteSCServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteSCServlet</servlet-name>
        <url-pattern>/servlet/deleteSCSerlvet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Kaptcha</servlet-name>
        <servlet-class>com.google.code.kaptcha.servlet.KaptchaServlet</servlet-class>
        <init-param>
            <param-name>kaptcha.border</param-name>
            <param-value>no</param-value>
        </init-param>
        <init-param>
            <param-name>kaptcha.textproducer.font.color</param-name>
            <param-value>black</param-value>
        </init-param>
        <init-param>
            <param-name>kaptcha.textproducer.char.space</param-name>
            <param-value>5</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Kaptcha</servlet-name>
        <url-pattern>/Kaptcha.jpg</url-pattern>
    </servlet-mapping>
</web-app>